    "version": "0.2.0",
    "configurations": [
        
        {
            "args": [
                "--ui",
                "bdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}\\code\\server\\test"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}\\code\\server\\node_modules\\mocha\\bin\\mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "cwd" : "${workspaceFolder}\\code\\server\\"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\code\\server\\server.js",
            "cwd" : "${workspaceFolder}\\code\\server\\"
        }
    ]
}